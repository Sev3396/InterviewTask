<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="domain"
            type="String" />
        <variable
            name="stateDO"
            type="com.tcs.testapp.model.State" />
        <variable
            name="clickListener"
            type="com.tcs.testapp.listeners.StateCapitalItemClickListener" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="@{clickListener::onClick}"
    android:tag="@{stateDO}">

    <ImageView
        android:id="@+id/iv_Icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:imageUrl="@{domain + stateDO.imageUrl}"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_child"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_Icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_IdNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Integer.toString(stateDO.id)}"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{stateDO.name}"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_Capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{stateDO.capital}"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>